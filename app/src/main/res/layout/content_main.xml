<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.behy.listing.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listMenu"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn1"
                android:backgroundTint="@color/blue"
                android:tag="01"
                />
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn2"
                android:backgroundTint="@color/red"
                android:tag="02"/>
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn3"
                android:backgroundTint="@color/black"
                android:tag="03"/>
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn4"
                android:backgroundTint="@color/green"
                android:tag="04"/>
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn5"
                android:backgroundTint="@color/orange"
                android:tag="05"/>
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn6"
                android:backgroundTint="@color/pink"
                android:tag="06"/>
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn7"
                android:backgroundTint="@color/blue"
                android:tag="07"/>
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn8"
                android:backgroundTint="@color/red"
                android:tag="08"/>
            <ImageButton
                android:onClick="btnClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_cat1"
                android:layout_marginLeft="@dimen/main_icon_margin"
                android:layout_marginRight="@dimen/main_icon_margin"
                android:id="@+id/btn9"
                android:backgroundTint="@color/black"
                android:tag="09"/>

        </LinearLayout>

    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/selItems"
        android:text="Hello World!" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listMenu"
        android:layout_above="@id/selItems"
        android:id="@+id/mList"/>


    <!--<android.support.v4.view.ViewPager-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/pager"/>-->
</RelativeLayout>
